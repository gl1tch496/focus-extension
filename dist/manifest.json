{
  "manifest_version": 3,
  "name": "Focus Mode - Smart Website Blocker",
  "version": "1.0.0",
  "description": "Block distracting websites during focus sessions with Pomodoro timer",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "declarativeNetRequest": {
    "rule_resources": []
  }
}